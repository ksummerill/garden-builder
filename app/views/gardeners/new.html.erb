<%= render partial: 'layouts/messages', locals: {object: @gardener} %>

<h1>Sign up</h1>

<%= form_for(@gardener) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>

  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <br>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <br>
  <%= f.submit "Sign Up" %>

<% end %>
