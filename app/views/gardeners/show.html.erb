<main role="main" page="show">
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Welcome, <%= @gardener.first_name %></h1>
    </div>
  </section>

  <section class="newest">
    <h2>My Gardens</h2>

    <% @gardens.each do |g| %>
      <div class="row">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title"><%= g.name %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= g.variety %></h6>
            <p class="card-text">more text?</p>
            <a class="btn btn-primary btn-lg" <%= link_to "Visit Garden", gardener_garden_path(g.gardener.id, g.id) %> </a>
          </div>
        </div>
      <% end %>
      </div>
  </section>

  <!-- Create Garden link needs to direct to gardeners/id/gardens/new -->
  <a class="btn btn-primary btn-lg" <%= link_to "Create Garden", new_gardener_garden_path(@gardener) %> </a>
  
</main>
