<%= form_tag("/login", method: "post") do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= text_field_tag :username, nil, placeholder: "username", id: "gardener[username]" %><br>
  <%= password_field_tag :password, nil, placeholder: "password", id: "gardener[password]" %>
  <%= submit_tag "Log In" %>

  <%= link_to "Login with Github", "/auth/github" %>

<% end %>
