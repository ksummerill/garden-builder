<p class="lead">Plant plants and create tasks for your garden</p>

<main role="main" page="show">

  <section class="gardens">
    <h2><%= @garden.name %> garden</h2>

    <% @plants.each do |p| %>
      <div class="row">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title"><%= p.name %></h4>
            <a class="link" <%= link_to "View plant", garden_plant_path(p.garden.id, p.id) %> </a>
          </div>
        </div>
      <% end %>
      </div>
  </section>

<br>
  <a class="btn btn-primary btn-md" <%= link_to 'Plant a plant', new_garden_plant_path(@garden.id) %> </a>
<br>
<br>

  <section class="tasks">
    <h2>Tasks</h2>
      <% @tasks.each do |t| %>
          <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= t.title %>
              <%= button_to "x", garden_task_path(@garden, t), :method => "delete", :class => "destroy" %>
            </li>
            <br>
        </ul>
      <% end %>
      <a class="btn btn-primary btn-md" <%= link_to 'Create a task', new_garden_task_path(@garden.id) %> </a>
  </section>

<br>


<button type="button" class="btn btn-outline-secondary"> <%= link_to 'Back', gardener_path(@gardener) %></button>


</main>
